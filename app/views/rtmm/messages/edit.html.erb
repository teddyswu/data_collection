<%= form_for @message, :url => rtmm_message_path(@message.id) do |f| %>
  <div class="form-group row">
	  <label for="example-text-input" class="col-xs-2 col-form-label">Name</label>
	  <div class="col-xs-10"><%= @message.rtmm_category.name%></div>
	</div>
	<div class="form-group">
    <%= f.label :messages, "Messages" %>
    <%= f.text_area :messages ,class: "form-control", rows: 10%>
  </div>
  <div class="form-group">
    <%= f.label :start_date, "Start Date" %>
    <%= f.datetime_local_field :start_date%>
  </div>
  <div class="form-group">
    <%= f.label :end_date, "End Date" %>
    <%= f.datetime_local_field :end_date%>
  </div>
  <%= f.submit "Update", class: "btn btn-primary" %>
<% end %>