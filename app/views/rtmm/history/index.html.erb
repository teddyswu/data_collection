<div class="row">
  <p></p>
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <i class="fa fa-bar-chart-o fa-fw"></i> History List
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            <div class="table-responsive">
              <table class="table table-bordered table-hover table-striped">
                <thead>
                  <tr>
                    <th>名稱</th>
                    <th>類別</th>
                    <th>數值</th>
                    <th>停留時間</th>
                    <th>產生時間</th>
                    <th>類別</th>
                  </tr>
                </thead>
                <tbody>
                  <% @history.each do |history|%>
                    <tr>
                      <td><%= history.who %></td>
                      <td><%= history.key %></td>
                      <td><%= history.val %></td>
                      <td><%= history.residence_time %></td>
                      <td><%= history.created_at.strftime('%F') %></td>
                      <td><%= history.category %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            <!-- /.table-responsive -->
          </div>
          <!-- /.col-lg-4 (nested) -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->    
  </div>
</div>