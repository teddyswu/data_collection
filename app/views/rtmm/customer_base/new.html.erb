<%= form_for @cate, :url => rtmm_customer_base_index_path do |f| %>
	<%= f.label :name, "名稱" %>
	<%= f.text_field :name %>
	<br >
	<%= f.label :group, "族群"%>
	<%= f.select :group, options_from_collection_for_select(@group, "id", "name", @cate.group) %>
	<br >
	<%= f.label :position, "產品定位" %>
	<%= f.select :position, options_from_collection_for_select(@position, "id", "name", @cate.position) %>
	<br >
	<%= f.label :price, "價格" %>
	<%= f.select :price, options_from_collection_for_select(@price, "id", "name", @cate.price) %>
	<br >
  <%= f.label :brand_preference, "品牌偏好" %>
	<%= f.select :brand_preference, options_from_collection_for_select(@brand_preference, "id", "name", @cate.brand_preference) %>
	<br >
	<%= f.label :product_color, "產品顏色" %>
	<%= f.select :product_color, options_from_collection_for_select(@product_color, "id", "name", @cate.product_color) %>
	<br >
	<%= f.label :prefecture, "專區" %>
	<%= f.select :prefecture, options_from_collection_for_select(@prefecture, "id", "name", @cate.prefecture) %>
	<br >
	<%= f.label :other_prefecture, "專區2" %>
	<%= f.select :other_prefecture, options_from_collection_for_select(@other_prefecture, "id", "name", @cate.other_prefecture) %>
	<br >
	<%= f.submit "submit"%>
<% end %>