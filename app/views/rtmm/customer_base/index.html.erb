<div class="row">
  <%= link_to "New", new_rtmm_customer_base_path%>
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <i class="fa fa-bar-chart-o fa-fw"></i> All Customer Base
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            <div class="table-responsive">
              <table class="table table-bordered table-hover table-striped">
                <thead>
                  <tr>
                    <th>#</th>
                    <th><%= t('rtmm.name')%></th>
                    <th><%= t('rtmm.brand_preference')%></th>
                    <th><%= t('rtmm.price')%></th>
                    <th><%= t('rtmm.position')%></th>
                    <th><%= t('rtmm.group')%></th>
                    <th><%= t('rtmm.product_color')%></th>
                    <th><%= t('rtmm.prefecture')%></th>
                    <th><%= t('rtmm.other_prefecture')%></th>
                    <th><%= t('rtmm.management')%></th>
                  </tr>
                </thead>
                <tbody>
                  <% @cate.each do |cate| %>
                    <tr>
                      <td><%= cate.id %></td>
                      <td><%= cate.name%></td>
                      <td><%= render_brand_preference(cate.brand_preference) %></td>
                      <td><%= render_price(cate.price) %></td>
                      <td><%= render_position(cate.position) %></td>
                      <td><%= render_group(cate.group) %></td>
                      <td><%= render_product_color(cate.product_color) %></td>
                      <td><%= render_prefecture(cate.prefecture) %></td>
                      <td><%= render_other_prefecture(cate.other_prefecture) %></td>
                      <td><%= link_to "edit",edit_rtmm_customer_base_path(cate.id)%></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            <!-- /.table-responsive -->
          </div>
          <!-- /.col-lg-4 (nested) -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->    
  </div>
</div>